page {
  height: 100%;
}
.background {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
  background-image: linear-gradient(135deg, #FFFFFF 0%, #DDDDDD 100%);
}


.container {
  padding: 20px 20px 20px 20px;
}

.box {
}

.card {
  background-color: #FFF;
  min-height: 100px;
  margin-bottom: 10px;
  border-radius: 10px;
  box-shadow: 0px 5px 0px -2px #DDD;
  display: flex;
  flex-direction: row;
}


.right {
  display: flex;
  flex-direction: column;
  padding: 10px;
  padding-left: 0;
}

.info {
  padding-left: 20px;
  padding-top: 10px;
  font-size: 18px;
  color: #666;
  font-weight: 200;
}
.title {
  padding-left: 20px;
  margin-top: 5px;
  font-size: 20px;
  color: #333;
  font-weight: 300;
}


.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}
.loading > image {
  width: 25px;
  height: 25px;
  animation: loading 800ms infinite ease;
}

/*加载动画  */
@keyframes loading {
  0% {
    transform: rotate(360deg);
  }
  100% {
    transform: rotate(0deg);
  }
}

.nodata {
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.nodata > image {
  width: 100px;
  height: 100px;
}

.nodata > text {
  font-size: 14px;
  margin-top: 10px;
  font-weight: 300;
  color: #666;
}